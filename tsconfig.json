{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types/"
    ]
  }
}
